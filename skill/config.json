{
  "name": "adablock",
  "version": "1.0.0",
  "description": "AdaBlock agent skill â€” monitors YouTube ad infrastructure and generates adaptive filter updates",

  "relays": [
    "wss://relay.substation.ninja",
    "wss://relay.damus.io",
    "wss://nos.lol",
    "wss://relay.nostr.band"
  ],

  "check_interval_minutes": 60,
  "max_retries": 3,
  "retry_delay_seconds": 30,

  "trusted_pubkeys": [],

  "nostr_keypair": {
    "description": "Generate with: python -c \"from publisher import generate_keypair; generate_keypair()\"",
    "private_key_hex": "GENERATE_ME",
    "public_key_hex": "GENERATE_ME"
  },

  "youtube_endpoints": [
    "https://www.youtube.com",
    "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
    "https://www.youtube.com/results?search_query=test"
  ],

  "known_ad_scripts": [
    "https://www.youtube.com/s/desktop/*/jsbin/desktop_polymer.vflset/desktop_polymer.js",
    "https://www.youtube.com/s/player/*/player_ias.vflset/*/base.js"
  ],

  "ad_indicators": {
    "css_classes": [
      "ad-showing",
      "ad-interrupting",
      "ytp-ad-overlay-container",
      "ytp-ad-player-overlay",
      "ytd-ad-slot-renderer",
      "ytd-in-feed-ad-layout-renderer"
    ],
    "dom_ids": [
      "player-ads",
      "masthead-ad",
      "ad-slot-rail"
    ],
    "text_patterns": [
      "ad blockers are not allowed",
      "ad blockers violate",
      "allow youtube ads"
    ]
  },

  "output_dir": "./output",
  "cache_dir": "./cache",
  "log_dir": "./logs"
}
